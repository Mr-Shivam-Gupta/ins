# Database Configuration
# Copy this file to .env and update the values according to your setup

# Node Environment (development, production, test)
NODE_ENV=development

# MongoDB Connection URIs for different environments
MONGODB_URI=mongodb://127.0.0.1:27017/ins-portfolio
MONGODB_URI_DEV=mongodb://127.0.0.1:27017/ins-portfolio-dev
MONGODB_URI_TEST=mongodb://127.0.0.1:27017/ins-portfolio-test
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/ins-portfolio

# MongoDB Atlas Connection (if using cloud database)
# MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority

# Server Configuration
PORT=5000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Application Settings
LOG_LEVEL=info
CORS_ORIGIN=*

# Optional: Database Authentication (if required)
# DB_USERNAME=your-username
# DB_PASSWORD=your-password
# DB_AUTH_SOURCE=admin